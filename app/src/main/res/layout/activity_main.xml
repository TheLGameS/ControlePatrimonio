<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".Main">

    <ImageView
        android:id="@+id/ivUFScar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:src="@drawable/dmufscar" />

    <LinearLayout
        android:id="@+id/lvMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUFScar"
        android:orientation="horizontal">

        <com.xgc1986.ripplebutton.widget.RippleButton
            android:id="@+id/btnIniciarRFID"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:text="@string/btnIniciar_Leitor"
            android:textColor="#FFF"
            app:buttonColor="#2196f3"
            app:rippleColor="@android:color/white" />


        <com.xgc1986.ripplebutton.widget.RippleButton
            android:textColor="#FFF"
            app:buttonColor="#2196f3"
            app:rippleColor="@android:color/white"
            android:id="@+id/btnPatrimonio"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tool_bar"
            android:layout_weight="1"
            android:text="@string/btnPatrimonio" />
    </LinearLayout>


    <include
        android:id="@+id/ToolbarBootom"

        layout="@layout/toolbar_bootom" />


</RelativeLayout>